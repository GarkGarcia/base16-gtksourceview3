<style-scheme id="{{scheme-name}}" _name="{{scheme-name}}" version="1.0">
  <author>{{scheme-author}}</author>
  <_description>{{scheme-name}} Color Scheme</_description>

  <!-- Palette -->
  <color name="base00"                      value="#{{base00-hex}}"/>
  <color name="base01"                      value="#{{base01-hex}}"/>
  <color name="base02"                      value="#{{base02-hex}}"/>
  <color name="base03"                      value="#{{base03-hex}}"/>
  <color name="base04"                      value="#{{base04-hex}}"/>
  <color name="base05"                      value="#{{base05-hex}}"/>
  <color name="base06"                      value="#{{base06-hex}}"/>
  <color name="base07"                      value="#{{base07-hex}}"/>
  <color name="base08"                      value="#{{base08-hex}}"/>
  <color name="base09"                      value="#{{base09-hex}}"/>
  <color name="base0A"                      value="#{{base0A-hex}}"/>
  <color name="base0B"                      value="#{{base0B-hex}}"/>
  <color name="base0C"                      value="#{{base0C-hex}}"/>
  <color name="base0D"                      value="#{{base0D-hex}}"/>
  <color name="base0E"                      value="#{{base0E-hex}}"/>
  <color name="base0F"                      value="#{{base0F-hex}}"/>

  <!-- Global Settings -->
  <style name="current-line"                background="base02"/>
  <style name="current-line-number"         bold="true"/>
  <style name="draw-spaces"                 foreground="#babdb6"/> <!-- TODO -->
  <style name="background-pattern"          background="#f3f3f3"/> <!-- TODO -->

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="base06" background="base03"/>
  <style name="bracket-mismatch"            foreground="base08"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="#000000" background="#000000"/> <!-- TODO -->

  <!-- Search Matching -->
  <style name="search-match"                background="base0A"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="base03"/>
  <style name="def:shebang"                 foreground="base03" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="base09"/>
  <style name="def:special-char"            foreground="base0C"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="base08"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="base0E" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="base0A" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="base0F"/>
  <style name="def:error"                   background="base08" bold="true"/>
  <style name="def:warning"                 background="base0A"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Language specific styles -->
  <style name="diff:added-line"             foreground="base0B"/>
  <style name="diff:removed-line"           foreground="base08"/>
  <style name="diff:changed-line"           foreground="base0E"/>
  <style name="diff:special-case"           use-style="def:constant"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:diff-file"              use-style="def:type"/>

  <style name="xml:tags"                    foreground="base08"/>
  <style name="xml:attribute-name"          foreground="base09"/>
  <style name="xml:namespace"               foreground="base0D" bold="true"/>

  <style name="js:constructors"             use-style="def:type"/>

  <style name="latex:display-math"          foreground="base0B"/>
  <style name="latex:command"               foreground="base0D"/>
  <style name="latex:include"               foreground="base0D"/>

</style-scheme>
